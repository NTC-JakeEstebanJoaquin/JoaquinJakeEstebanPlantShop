  <!-- Shopping Cart -->
  <div id="cart" class="hidden">
    <div class="cart-summary">
      <p><strong>Total Plants:</strong> <span id="total-plants">0</span></p>
      <p><strong>Total Cost:</strong> $<span id="total-cost">0</span></p>
    </div>
    <div id="cart-items"></div>
    <button class="checkout-button" onclick="checkout()">Checkout</button>
    <button class="continue-shopping-button" onclick="showProducts()">Continue Shopping</button>
  </div>

  <script>
    // Plant data with embedded SVG images
    const plants = {
      1: { name: 'Snake Plant', price: 20, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><path d='M100,120 L90,80 L80,100 L70,70 L60,90 L50,50 M100,120 L110,80 L120,100 L130,70 L140,90 L150,50' stroke='%232e7d32' stroke-width='3' fill='none'/><ellipse cx='100' cy='130' rx='30' ry='10' fill='%238d6e63'/></svg>" },
      2: { name: 'Pothos', price: 15, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><path d='M100,130 Q80,100 70,80 Q60,60 75,50 M100,130 Q120,100 130,80 Q140,60 125,50' stroke='%23388e3c' stroke-width='2' fill='none'/><circle cx='75' cy='50' r='12' fill='%234caf50'/><circle cx='125' cy='50' r='12' fill='%234caf50'/><circle cx='70' cy='80' r='10' fill='%234caf50'/><circle cx='130' cy='80' r='10' fill='%234caf50'/><rect x='85' y='130' width='30' height='20' rx='3' fill='%238d6e63'/></svg>" },
      3: { name: 'Spider Plant', price: 18, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><g id='leaf'><path d='M0,0 Q5,-15 0,-30 Q-5,-15 0,0' fill='%234caf50' stroke='%232e7d32'/></g><use href='%23leaf' x='100' y='75'/><use href='%23leaf' x='100' y='75' transform='rotate(45 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(90 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(135 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(180 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(225 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(270 100 75)'/><use href='%23leaf' x='100' y='75' transform='rotate(315 100 75)'/><ellipse cx='100' cy='135' rx='30' ry='10' fill='%238d6e63'/></svg>" },
      4: { name: 'Peace Lily', price: 25, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><ellipse cx='100' cy='70' rx='40' ry='50' fill='%231b5e20'/><ellipse cx='100' cy='60' rx='35' ry='40' fill='%232e7d32'/><circle cx='100' cy='55' r='8' fill='%23fff'/><ellipse cx='100' cy='130' rx='35' ry='12' fill='%238d6e63'/></svg>" },
      5: { name: 'ZZ Plant', price: 22, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><rect x='70' y='60' width='10' height='60' fill='%232e7d32'/><rect x='85' y='50' width='10' height='70' fill='%232e7d32'/><rect x='105' y='50' width='10' height='70' fill='%232e7d32'/><rect x='120' y='60' width='10' height='60' fill='%232e7d32'/><ellipse cx='75' cy='50' rx='15' ry='25' fill='%234caf50'/><ellipse cx='90' cy='40' rx='15' ry='25' fill='%234caf50'/><ellipse cx='110' cy='40' rx='15' ry='25' fill='%234caf50'/><ellipse cx='125' cy='50' rx='15' ry='25' fill='%234caf50'/><ellipse cx='100' cy='135' rx='40' ry='12' fill='%238d6e63'/></svg>" },
      6: { name: 'Monstera', price: 30, thumbnail: "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 150'><rect fill='%23e8f5e9' width='200' height='150'/><path d='M100,100 L90,70 Q88,60 95,55 L100,50 L105,55 Q112,60 110,70 Z' fill='%234caf50' stroke='%232e7d32' stroke-width='2'/><circle cx='95' cy='65' r='6' fill='%23a5d6a7'/><circle cx='105' cy='75' r='5' fill='%23a5d6a7'/><path d='M100,100 L120,80 Q125,75 130,80 L135,90 Q135,95 130,95 Z' fill='%234caf50' stroke='%232e7d32' stroke-width='2'/><circle cx='128' cy='85' r='4' fill='%23a5d6a7'/><path d='M100,100 L80,80 Q75,75 70,80 L65,90 Q65,95 70,95 Z' fill='%234caf50' stroke='%232e7d32' stroke-width='2'/><circle cx='72' cy='85' r='4' fill='%23a5d6a7'/><ellipse cx='100' cy='135' rx='35' ry='12' fill='%238d6e63'/></svg>" },
    };

    // Cart state (in-memory storage)
    let cart = {};
    let addedItems = new Set();

    // Show/hide sections
    function showLanding() {
      document.getElementById('landing').classList.remove('hidden');
      document.getElementById('products').classList.add('hidden');
      document.getElementById('cart').classList.add('hidden');
      document.getElementById('header').classList.add('hidden');
    }
    
    function showProducts() {
      document.getElementById('landing').classList.add('hidden');
      document.getElementById('products').classList.remove('hidden');
      document.getElementById('cart').classList.add('hidden');
      document.getElementById('header').classList.remove('hidden');
      updateCartCount();
    }
    
    function showCart() {
      document.getElementById('landing').classList.add('hidden');
      document.getElementById('products').classList.add('hidden');
      document.getElementById('cart').classList.remove('hidden');
      document.getElementById('header').classList.remove('hidden');
      renderCart();
    }

    // Update cart count in header
    function updateCartCount() {
      const totalItems = Object.values(cart).reduce((sum, qty) => sum + qty, 0);
      document.getElementById('cart-count').textContent = `ðŸ›’ ${totalItems}`;
    }

    // Add to cart
    function addToCart(id) {
      if (!addedItems.has(id.toString())) {
        cart[id] = (cart[id] || 0) + 1;
        addedItems.add(id.toString());
        updateCartCount();
        const button = document.querySelector(`.plant-card[data-id="${id}"] .add-to-cart`);
        if (button) button.disabled = true;
      }
    }

    // Increase quantity
    function increaseQuantity(id) {
      cart[id] = (cart[id] || 0) + 1;
      renderCart();
      updateCartCount();
    }

    // Decrease quantity
    function decreaseQuantity(id) {
      if (cart[id] > 1) {
        cart[id] -= 1;
        renderCart();
        updateCartCount();
      }
    }

    // Remove item
    function removeItem(id) {
      delete cart[id];
      addedItems.delete(id.toString());
      renderCart();
      updateCartCount();
      const button = document.querySelector(`.plant-card[data-id="${id}"] .add-to-cart`);
      if (button) button.disabled = false;
    }

    // Render cart
    function renderCart() {
      const cartItemsEl = document.getElementById('cart-items');
      const totalPlantsEl = document.getElementById('total-plants');
      const totalCostEl = document.getElementById('total-cost');
      cartItemsEl.innerHTML = '';
      
      let totalPlants = 0;
      let totalCost = 0;
      
      const cartKeys = Object.keys(cart);
      
      if (cartKeys.length === 0) {
        cartItemsEl.innerHTML = '<div class="empty-cart"><h3>Your cart is empty</h3><p>Add some plants to get started!</p></div>';
      } else {
        cartKeys.forEach(id => {
          const plant = plants[id];
          const quantity = cart[id];
          totalPlants += quantity;
          totalCost += plant.price * quantity;
          
          const itemEl = document.createElement('div');
          itemEl.className = 'cart-item';
          itemEl.innerHTML = `
            <img src="${plant.thumbnail}" alt="${plant.name}">
            <h3>${plant.name}</h3>
            <p>$${plant.price}</p>
            <div class="quantity-controls">
              <button onclick="decreaseQuantity(${id})">-</button>
              <span>${quantity}</span>
              <button onclick="increaseQuantity(${id})">+</button>
            </div>
            <button onclick="removeItem(${id})">Delete</button>
          `;
          cartItemsEl.appendChild(itemEl);
        });
      }
      
      totalPlantsEl.textContent = totalPlants;
      totalCostEl.textContent = totalCost;
    }

    // Checkout
    function checkout() {
      if (Object.keys(cart).length === 0) {
        alert('Your cart is empty! Add some plants first.');
      } else {
        const total = Object.keys(cart).reduce((sum, id) => sum + (plants[id].price * cart[id]), 0);
        alert(`Thank you for your order! Total: $${total}\n\nCheckout functionality coming soon!`);
      }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
      showLanding();
      
      // Attach Add to Cart event listeners
      document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', (e) => {
          const id = e.target.closest('.plant-card').dataset.id;
          addToCart(id);
        });
      });
    });
  </script>
</body>
</html>
